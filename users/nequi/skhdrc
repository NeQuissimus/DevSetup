# brew install koekeishiya/formulae/skhd

cmd - b : yabai -m space --balance
cmd - right: yabai -m window --focus next
cmd - left: yabai -m window --focus prev
cmd - up: yabai -m window --resize top:0:-20 || yabai -m window --resize bottom:0:20 || yabai -m window --resize left:-20:0 || yabai -m window --resize right:20:0
cmd - down: yabai -m window --resize top:0:20 || yabai -m window --resize bottom:0:-20 || yabai -m window --resize left:20:0 || yabai -m window --resize right:-20:0
cmd + shift - right: yabai -m window --swap next
cmd + shift - left: yabai -m window --swap prev
cmd + shift - y: brew services restart yabai && brew services restart skhd
cmd - return: open -a iTerm ~
